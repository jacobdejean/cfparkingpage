---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";

const { env } = Astro.locals.runtime;
const title = env.PUBLIC_PAGE_TITLE ?? "This Domain is Parked";
const caption = env.PUBLIC_PAGE_CAPTION ?? "The owner of this domain has not yet published their website. Please check back later.";
const copyright = env.PUBLIC_PAGE_COPYRIGHT ?? `Â© ${new Date().getFullYear()} All rights reserved`;
const email = env.PUBLIC_EMAIL ?? "";
---

<Layout>
    <div
        class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 p-4 text-center"
    >
        <h1 class="text-4xl font-bold text-gray-800 mb-4">
            {title}
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-md">
            {caption}
        </p>
        {
            email ? (
                <a
                    href={`mailto:${email}`}
                    class="text-xl text-gray-600 mb-8 max-w-md underline"
                >
                    {email}
                </a>
            ) : null
        }

        <p class="mt-8 text-sm text-gray-500">
            {copyright}
        </p>
    </div>
</Layout>
